snippet listing_setup
\usepackage{listings}

\definecolor{mygreen}{rgb}{0,0.6,0}

\lstset{
	caption=\relax,
	numbers=left,
	captionpos=b,
	frame=single,
	basicstyle=\footnotesize\ttfamily,
	commentstyle=\color{mygreen},
	keywordstyle=\color{blue},
	stringstyle=\color{orange},
	extendedchars=true,
	keepspaces=true,
	showtabs=false,
	tabsize=2,
	breaklines=true,
	showstringspaces=false
}
endsnippet

snippet btable "Booktabs table environment" b
\begin{table}[${1:htpb}]
	\centering
	\begin{tabular}{ll}
		\toprule
		Header1 & Header2 \\ \midrule
		Column1 & Column2 \\
		\bottomrule
	\end{tabular}
	\caption{${2:caption}}
	\label{tab:${3:label}}
\end{table}
endsnippet

