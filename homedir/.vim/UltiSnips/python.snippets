snippet profile "cProfile decorator"
def profile(method):
	import cProfile

	def profiled(*args, **kwargs):
		cp = cProfile.Profile()
		cp.enable()
		res = method(*args, **kwargs)
		cp.disable()
		cp.print_stats()
		return res
	return profiled

endsnippet
